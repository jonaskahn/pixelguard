# PixelGuard Environment Variables Example
# Copy this file to .env and modify the values as needed

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================

# Enable debug mode for the API server (default: false)
PXG_DEBUG=false

# Number of worker processes for the API server (default: 10)
PXG_WORKERS=10

# =============================================================================
# DETECTOR ENABLE/DISABLE FLAGS
# =============================================================================

# Enable/disable border fill detector (default: true)
PXG_DETECTOR_BORDER_FILL_ENABLED=true

# Enable/disable uniform color detector (default: true)
PXG_DETECTOR_UNIFORM_COLOR_ENABLED=true

# Enable/disable background detector (default: true)
PXG_DETECTOR_BACKGROUND_ENABLED=true

# Enable/disable ratio detector (default: true)
PXG_DETECTOR_RATIO_ENABLED=true

# =============================================================================
# BORDER FILL DETECTOR CONFIGURATION
# =============================================================================

# Percentage of image height to check at top (default: 0.1)
PXG_BORDER_FILL_TOP_REGION_PERCENTAGE=0.1

# Percentage of image height to check at bottom (default: 0.1)
PXG_BORDER_FILL_BOTTOM_REGION_PERCENTAGE=0.1

# Threshold for black pixel detection (0-255, default: 30)
PXG_BORDER_FILL_BLACK_THRESHOLD=30

# Threshold for white pixel detection (0-255, default: 225)
PXG_BORDER_FILL_WHITE_THRESHOLD=225

# Threshold for black fill percentage (0.0-1.0, default: 0.05)
PXG_BORDER_FILL_BLACK_FILL_THRESHOLD=0.05

# Threshold for white fill percentage (0.0-1.0, default: 0.05)
PXG_BORDER_FILL_WHITE_FILL_THRESHOLD=0.05

# Enable/disable top border check (default: false)
PXG_BORDER_FILL_CHECK_TOP=false

# Enable/disable bottom border check (default: true)
PXG_BORDER_FILL_CHECK_BOTTOM=true

# Required uniformity percentage for border detection (0.0-1.0, default: 0.90)
PXG_BORDER_FILL_UNIFORMITY_REQUIRED=0.90

# =============================================================================
# UNIFORM COLOR DETECTOR CONFIGURATION
# =============================================================================

# Color difference threshold for uniform color detection (0-255, default: 15)
PXG_UNIFORM_COLOR_DELTA_THRESHOLD=15

# Color space for uniform color analysis (RGB, LAB, HSV, default: LAB)
PXG_UNIFORM_COLOR_SPACE=LAB

# Coverage threshold for uniform color detection (0.0-1.0, default: 0.85)
PXG_UNIFORM_COLOR_COVERAGE_THRESHOLD=0.85

# Number of sample points for uniform color analysis (default: 1000)
PXG_UNIFORM_COLOR_SAMPLE_SIZE=1000

# Enable/disable edge ignoring for uniform color detection (default: true)
PXG_UNIFORM_COLOR_IGNORE_EDGES=true

# Percentage of edges to ignore (0.0-1.0, default: 0.02)
PXG_UNIFORM_COLOR_EDGE_IGNORE_PERCENTAGE=0.02

# =============================================================================
# BACKGROUND DETECTOR CONFIGURATION
# =============================================================================

# Background detection method (edge_based, histogram, default: edge_based)
PXG_BACKGROUND_DETECTION_METHOD=edge_based

# Percentage of corner area to sample (0.0-1.0, default: 0.08)
PXG_BACKGROUND_CORNER_SAMPLE_PERCENTAGE=0.08

# Percentage of edge area to sample (0.0-1.0, default: 0.05)
PXG_BACKGROUND_EDGE_SAMPLE_PERCENTAGE=0.05

# Coverage threshold for background detection (0.0-1.0, default: 0.65)
PXG_BACKGROUND_COVERAGE_THRESHOLD=0.65

# Color tolerance for background detection (0-255, default: 25)
PXG_BACKGROUND_COLOR_TOLERANCE=25

# Number of histogram bins for background analysis (default: 64)
PXG_BACKGROUND_HISTOGRAM_BINS=64

# Threshold for dominant color detection (0.0-1.0, default: 0.60)
PXG_BACKGROUND_DOMINANT_COLOR_THRESHOLD=0.60

# =============================================================================
# RATIO DETECTOR CONFIGURATION
# =============================================================================

# Enable/disable ratio detector (default: true)
PXG_RATIO_ENABLED=true

# Target aspect ratios (format: width:height,width:height, default: 16:9,4:3,1:1,3:4,9:16)
PXG_RATIO_TARGET_RATIOS=16:9,4:3,1:1,3:4,9:16

# Tolerance for ratio matching (0.0-1.0, default: 0.1)
PXG_RATIO_TOLERANCE=0.1

# Enable/disable minimum dimension checking (default: true)
PXG_RATIO_CHECK_MINIMUM_DIMENSIONS=true

# Minimum width in pixels (default: 100)
PXG_RATIO_MINIMUM_WIDTH=100

# Minimum height in pixels (default: 100)
PXG_RATIO_MINIMUM_HEIGHT=100

# Enable/disable maximum dimension checking (default: false)
PXG_RATIO_CHECK_MAXIMUM_DIMENSIONS=false

# Maximum width in pixels (default: 10000)
PXG_RATIO_MAXIMUM_WIDTH=10000

# Maximum height in pixels (default: 10000)
PXG_RATIO_MAXIMUM_HEIGHT=10000

